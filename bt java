<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="card.css">
    <title>Card</title>
</head>
<body>
    <form action="" name="frm">
        <table>
            <th>Product Name: </th>
            <th>Product Picture: </th>
            <th>Product Price: </th>
            <tr>
                <td>
                    <input type="text" id="pro_name">    
                </td>

                <td>
                    <input type="file" id="image" name="image">
                </td>

                <td>
                    <input type="text" id="pro_price">
                </td>
            </tr>
        </table>
    

        <button type="button" onclick="add()">Add</button>
        <h3>ĐIỆN THOẠI NỔI BẬT NHẤT</h3>
    </form>

    <div class="card"> 
        <img id="display_image" style="width:100%">
        <b><p id="display_name"></p></b>
        <p id="display_price"></p>
    </div>

    <script>
        function add() {
            var pro_name = frm.pro_name.value;
            var image = document.getElementById("image");
            var pro_price = frm.pro_price.value;
            // var pro_title = frm.pro_title.value;

            var file = image.files[0];
            var reader = new FileReader();

            reader.onload = function(e) {
                var imageSrc = e.target.result;
                document.getElementById("display_image").src = imageSrc;
            };

            if (file) {
                reader.readAsDataURL(file);
            }

         
            document.getElementById("display_name").innerHTML = pro_name;
            document.getElementById("display_price").innerHTML = pro_price;
        }
    </script>

</body>
</html>